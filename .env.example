# =============================================================================
# AlgoShield Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# General Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Log Level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=algoshield
# REQUIRED: Must be at least 16 characters long
# In production: Must contain at least 3 of: uppercase, lowercase, digits, special chars
POSTGRES_PASSWORD=change-me-in-production-min-16-chars
POSTGRES_DB=algoshield

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8080

# TLS Configuration
# Set to "true" to enable TLS (REQUIRED in production)
TLS_ENABLE=false
# Path to TLS certificate file (required if TLS_ENABLE=true)
TLS_CERT_PATH=
# Path to TLS private key file (required if TLS_ENABLE=true)
TLS_KEY_PATH=

# =============================================================================
# Worker Configuration
# =============================================================================
# Number of concurrent workers processing transactions
WORKER_CONCURRENCY=10

# Batch size for processing transactions
WORKER_BATCH_SIZE=50

# Timeouts (duration format: 300ms, 5s, 1m, etc.)
WORKER_TIMEOUT_TRANSACTION_PROCESSING=300ms
WORKER_TIMEOUT_RULE_EVALUATION=300ms

# Retry Configuration
WORKER_RETRY_MAX_ATTEMPTS=3
WORKER_RETRY_INITIAL_DELAY=100ms
WORKER_RETRY_MAX_DELAY=5s
WORKER_RETRY_MULTIPLIER=2.0

# Queue Configuration
WORKER_QUEUE_POP_TIMEOUT=1s

# Rules Reload Configuration
WORKER_RULES_RELOAD_INTERVAL=10s

# =============================================================================
# Authentication Configuration
# =============================================================================
# REQUIRED: Must be at least 32 characters long
# In production: Must contain at least 3 of: uppercase, lowercase, digits, special chars
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=change-me-in-production-min-32-chars-very-secure-secret-key

# JWT token expiration time in hours
JWT_EXPIRATION_HOURS=24

# =============================================================================
# UI Configuration
# =============================================================================
# API request timeout in milliseconds
VITE_API_TIMEOUT=3000
VITE_API_URL=http://localhost:8080

# API retry configuration
VITE_API_RETRY_MAX_ATTEMPTS=3
VITE_API_RETRY_INITIAL_DELAY=1000
VITE_API_RETRY_MAX_DELAY=10000
VITE_API_RETRY_MULTIPLIER=2.0

# UI behavior configuration
VITE_UI_TOAST_DURATION=5000
VITE_UI_POLLING_INTERVAL=10000
VITE_SERVICE_NAME=algoshield-ui
