# Development stage
FROM node:25-alpine

WORKDIR /app

# Copy package files
COPY src/ui/package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src/ui/ ./

# Expose UI port
EXPOSE 5173

# Run in development mode for hot-reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

