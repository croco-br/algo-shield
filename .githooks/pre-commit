#!/bin/bash

# AlgoShield Pre-Commit Hook
# Runs tests before allowing commit

set -e

echo "ðŸ” Running pre-commit checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if Go is installed
if ! command -v go &> /dev/null; then
    echo -e "${RED}âœ— Go is not installed${NC}"
    exit 1
fi

# Check if we're in the right directory
if [ ! -f "go.mod" ]; then
    echo -e "${RED}âœ— Not in project root directory${NC}"
    exit 1
fi

echo -e "${YELLOW}â†’ Running Go unit tests...${NC}"

# Run Go tests
if GOEXPERIMENT=greenteagc,rangefunc go test -v -short ./...; then
    echo -e "${GREEN}âœ“ Go tests passed${NC}"
else
    echo -e "${RED}âœ— Go tests failed${NC}"
    echo -e "${YELLOW}Commit aborted. Fix the tests and try again.${NC}"
    exit 1
fi

# Check for common issues
echo -e "${YELLOW}â†’ Checking Go formatting...${NC}"
if [ -n "$(gofmt -l .)" ]; then
    echo -e "${RED}âœ— Go files need formatting${NC}"
    echo -e "${YELLOW}Run: go fmt ./...${NC}"
    exit 1
else
    echo -e "${GREEN}âœ“ Go formatting is correct${NC}"
fi

# Check for go.mod/go.sum consistency
echo -e "${YELLOW}â†’ Checking Go modules...${NC}"
go mod tidy -v
if [ -n "$(git diff go.mod go.sum)" ]; then
    echo -e "${YELLOW}âš  go.mod or go.sum were modified by 'go mod tidy'${NC}"
    echo -e "${YELLOW}Changes have been staged automatically${NC}"
    git add go.mod go.sum
fi

echo -e "${GREEN}âœ“ All pre-commit checks passed!${NC}"
exit 0

